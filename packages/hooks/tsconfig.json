{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strict": true,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": ["ES2019", "DOM"],
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__test__", "dist"]
}
